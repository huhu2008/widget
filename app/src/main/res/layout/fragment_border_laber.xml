<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <com.cz.library.widget.BorderLabelTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:text="@string/info"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"
        auto:bt_borderColor="@color/green"
        auto:bt_borderPadding="2dp"
        auto:bt_label="秘籍一"
        auto:bt_labelPadding="6dp"
        auto:bt_leftLabelPadding="40dp"
        auto:bt_textColor="@color/green"
        auto:bt_textSize="15sp" />

    <com.cz.library.widget.BorderLabelTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:text="@string/info"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"
        auto:bt_borderColor="@color/red"
        auto:bt_borderPadding="2dp"
        auto:bt_label="秘籍二"
        auto:bt_labelPadding="6dp"
        auto:bt_leftLabelPadding="40dp"
        auto:bt_textColor="@color/red"
        auto:bt_textSize="15sp" />

    <com.cz.library.widget.BorderLabelTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:text="@string/info"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"
        auto:bt_borderColor="@color/blue"
        auto:bt_borderPadding="2dp"
        auto:bt_label="秘籍三"
        auto:bt_labelPadding="6dp"
        auto:bt_leftLabelPadding="40dp"
        auto:bt_textColor="@color/blue"
        auto:bt_textSize="15sp" />
</LinearLayout>