<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/badger" />

    <com.cz.library.widget.BadgerTextView
        android:id="@+id/tv_menu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:background="@color/dark_gray"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/task_icon"
        android:gravity="center"
        android:padding="12dp"
        android:paddingTop="12dp"
        android:text="@string/timer_task"
        android:textColor="@color/white"
        android:textSize="13sp"
        auto:cv_drawableHeight="44dp"
        auto:cv_drawableMode="top"
        auto:cv_drawableWidth="44dp"
        auto:cv_sizeMode="top"
        auto:lt_badgerDrawable="@drawable/red_round_rectangle"
        auto:lt_badgerHeight="10dp"
        auto:lt_badgerText="2"
        auto:lt_badgerWidth="10dp"
        auto:lt_horizontalPadding="12dp"
        auto:lt_textSize="12sp"
        auto:lt_verticalPadding="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/demo" />

    <com.cz.app.widget.RadioLayout
        android:id="@+id/rg_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        auto:rl_items="@array/gravity3" />

    <com.cz.app.widget.RadioLayout
        android:id="@+id/rg_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        auto:rl_items="@array/textType" />


</LinearLayout>